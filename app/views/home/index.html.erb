<h1>CookBook</h1>
<p>Bem-vindo ao maior livro de receitas online</p>

<%= form_tag(search_recipes_path, method: :get) do %>
  <%= text_field_tag(:banana) %>
  <%= label_tag :banana, 'Busca' %>
  <%= submit_tag 'Buscar' %>
<% end %>

<%= link_to 'Enviar uma receita', new_recipe_path %>

<% @recipes.each do |r| %>
  <h1><%= link_to r.title, recipe_path(r.id) %></h1>
  <ul>
    <li><%= r.recipe_type.name %></li>
    <li><%= r.cuisine.name %></li>
    <li><%= r.difficulty %></li>
    <li><%= r.cook_time %> minutos</li>
  </ul>
<% end %>

<h2>Cozinhas</h2>
<% @cuisines.each do |c| %>
  <%= link_to c.name, c %>
<% end %>
